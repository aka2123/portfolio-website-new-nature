<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kontact | Nowa Natura</title>
    <!-- @include 'link.kit' -->
</head>

<body>
    <!-- @include 'nav-contact-page.kit' -->
    <main class="main">

        <section class="section first-section-with-bigger-padding-from-large-screen contact">

            <div class="contact__container wrapper">

                <div class="contact__text-box">
                    <h2 class="contact__title text-section-title">Skontaktuj się z nami</h2>
                    <p class="contact__text text-medium">Skontaktuj się z nami</p>
                </div>

                <div class="contact__form-message form-message">
                    <p class="contact__form-message-text form-message-text text-large">Wiadomość została wysłana</p>
                </div>

                <form class="contact__form">

                    <div class="contact__form-row-box">

                        <div class="contact__form-box form-box-for-input">
                            <label for="input-name" class="contact__label text-xs">Imię</label>
                            <input type="text" class="contact__input input-default input-name" id="input-name"
                            placeholder="Twoje imię">
                            <p class="contact__form-error text-xs error-for-inputs"></p>

                        </div>

                        <div class="contact__form-box form-box-for-input">
                            <label for="input-surname" class="contact__label text-xs">Nazwisko</label>
                            <input type="text" class="contact__input input-default input-surname" id="input-surname"
                            placeholder="Twoje nazwisko">
                            <p class="contact__form-error text-xs error-for-inputs"></p>
                    
                        </div>

                    </div>

                    <div class="contact__form-box form-box-for-input">
                        <label for="input-email" class="contact__label text-xs">Email</label>
                        <input type="email" class="contact__input input-default input-email" id="input-email"
                            placeholder="Twój email">
                        <p class="contact__form-error text-xs error-for-inputs"></p>

                    </div>

                    <div class="contact__form-box form-box-for-input">
                        <label for="input-phone-number" class="contact__label text-xs">Numer telefonu</label>
                        <input type="number" class="contact__input input-default input-phone-number" id="input-phone-number"
                            placeholder="Twój numer telefonu">
                        <p class="contact__form-error text-xs error-for-inputs"></p>

                    </div>

                    <div class="contact__form-box form-box-for-input">
                        <label for="textarea-message" class="contact__label text-xs">Wiadomość</label>
                        <textarea class="contact__textarea textarea-default textarea-message" id="textarea-message"
                            placeholder="Twoja wiadomość"></textarea>
                        <p class="contact__form-error text-xs error-for-inputs"></p>
                    </div>
                
                    <button class="contact__form-btn btn-default btn-for-inputs">Wyślij</button>

                </form>


                <div class="contact__info-container">

                    <div class="contact__info-box">
                        <img class="contact__icon flat-icon" src="./dist/img/icons/place-on-map.min.webp"
                            alt="znak wskazujący miejsce na mapie">
                        <h3 class="contact__info-title text-large">
                            Znajdź nas
                        </h3>
                        <p class="contact__info-text text-medium">
                            Kraków ul. Poznańska 19a
                        </p>
                    </div>

                    <div class="contact__info-box">
                        <img class="contact__icon flat-icon" src="./dist/img/icons/mail.min.webp" alt="koperta">
                        <h3 class="contact__info-title text-large">
                            Zadzwoń
                        </h3>
                        <p class="contact__info-text text-medium">
                            +48 901 212 991
                        </p>
                    </div>

                    <div class="contact__info-box">
                        <img class="contact__icon flat-icon" src="./dist/img/icons/phone-call.min.webp" alt="telefon">
                        <h3 class="contact__info-title text-large">
                            Napisz do nas
                        </h3>
                        <p class="contact__info-text text-medium">
                            contact@newnature.pl
                        </p>
                    </div>

                </div>

                <div class="contact__map-box">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d7950.477829689048!2d16.988720778750206!3d51.12241723579501!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1spl!2spl!4v1743265588589!5m2!1spl!2spl"
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>

        </section>
    </main>

    <!-- @include 'footer.kit' -->
    <!-- @include 'script.kit' -->
</body>

</html>